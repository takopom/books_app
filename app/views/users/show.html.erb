<p>
  <strong><%= t("users.name") %></strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= t("users.email") %></strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= t("users.zipcode") %></strong>
  <%= @user.zipcode %>
</p>

<p>
  <strong><%= t("users.address") %></strong>
  <%= @user.address %>
</p>


<p>
  <strong><%= t("users.bio") %></strong>
  <%= @user.bio %>
</p>

<p>
  <strong><%= t("users.avatar") %></strong><br>
  <% avatar = @user.avatar.attached? ? @user.avatar : "default.png" %>
  <%= image_tag avatar, size: "100x100" %>
</p>

<p>
  <strong><%= "投稿一覧" %></strong><br>

  <table>
    <thead>
      <tr>
        <th><%= t("books.title") %></th>
        <th><%= t("books.memo") %></th>
        <th><%= t("books.author") %></th>
        <th><%= t("books.picture") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.memo %></td>
          <td><%= book.author %></td>
          <td><%= book.picture %></td>
          <td><%= link_to t("views.show"), book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

