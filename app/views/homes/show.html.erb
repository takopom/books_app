<h1>フォローしているユーザの投稿</h1>

<table>
  <thead>
    <tr>
      <th><%= "投稿したユーザ名" %></th>
      <th><%= "投稿したユーザアイコン" %></th>
      <th><%= t("books.title") %></th>
      <th><%= t("books.memo") %></th>
      <th><%= t("books.author") %></th>
      <th><%= t("books.picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% post[:books].each do |book| %>
        <tr>
          <td><%= post[:email] %></td>
          <td><%= image_tag post[:avatar] if post[:avatar].attached? %></td>
          <td><%= book.title %></td>
          <td><%= book.memo %></td>
          <td><%= book.author %></td>
          <td><%= book.picture %></td>
          <td><%= link_to t("views.show"), book %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
