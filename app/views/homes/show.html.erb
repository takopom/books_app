<h1><%= t("views.home.title") %></h1>

<table>
  <thead>
    <tr>
      <th colspan="2"><%= t("views.home.posted_by") %></th>
      <th><%= t("books.title") %></th>
      <th><%= t("books.memo") %></th>
      <th><%= t("books.author") %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% post[:books].each do |book| %>
        <tr>
          <td><%= image_tag post[:avatar], size: "48x48" if post[:avatar].attached? %></td>
          <td><%= post[:name] %></td>
          <td><%= book.title %></td>
          <td><%= book.memo %></td>
          <td><%= book.author %></td>
          <td><%= link_to t("views.show"), book %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
