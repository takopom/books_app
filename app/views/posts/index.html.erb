<h1><%= @user.email %>さんの投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th><%= t("books.title") %></th>
      <th><%= t("books.memo") %></th>
      <th><%= t("books.author") %></th>
      <th><%= t("books.picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t("views.show"), book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
