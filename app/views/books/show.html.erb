<section>
  <h1><%= @book.title %></h1>

  <p>
    <strong><%= t("books.memo") %>:</strong>
    <%= @book.memo %>
  </p>

  <p>
    <strong><%= t("books.author") %>:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong><%= t("books.picture") %>:</strong>
    <%= image_tag(@book.picture_url) if @book.picture.present? %>
  </p>
</section>

<%= render 'comments/comments', comments: @comments %>
<%= render 'comments/form', commentable: @book, comment: @comment %>

<%= link_to t("views.edit"), edit_book_path(@book) %> |
<%= link_to t("views.back"), books_path %>
