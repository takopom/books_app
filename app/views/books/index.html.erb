<h1><%= t("views.menu.books") %></h1>
<p><%= t("views.books") %></p>

<table>
  <thead>
    <tr>
      <th><%= t("books.title") %></th>
      <th><%= t("books.memo") %></th>
      <th><%= t("books.author") %></th>
      <th><%= t("books.picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= image_tag book.picture_url, size: "64x64" if book.picture.present? %></td>
        <td><%= link_to t("views.show"), book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= paginate @books %>
  <%= page_entries_info @books %>
</div>

<br>

<%= link_to t("views.new_book"), new_book_path %>
