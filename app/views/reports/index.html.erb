<h1><%= t("views.reports") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("reports.title") %></th>
      <th><%= t("reports.reported_at") %></th>
      <th><%= t("reports.description") %></th>
      <th><%= t("reports.user") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.description %></td>
        <td><%= report.reported_on %></td>
        <td><%= report.user_id %></td>
        <td><%= link_to t("views.show"), report %></td>
        <td><%= link_to t("views.edit"), edit_report_path(report) %></td>
        <td><%= link_to t("views.destroy"), report, method: :delete, data: { confirm: t("messages.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.new_report"), new_report_path %>
