<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %><%= t("messages.prohibited_saved") %></h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, size: 50 %>
  </div>

  <div class="field">
    <%= form.label :reported_on %>
    <%= form.date_select :reported_on %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, cols: 50, rows: 20 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
