<section>
  <h1>日報</h1>

  <p>
    <strong>Title:</strong>
    <%= @report.title %>
  </p>

  <p>
    <strong>Reported on:</strong>
    <%= @report.reported_on %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @report.user_id %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @report.description %>
  </p>
</section>

<section>
  <h2>コメント</h2>

  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
</section>

<%= render 'comments/form', report: @report, comment: @comment %>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
